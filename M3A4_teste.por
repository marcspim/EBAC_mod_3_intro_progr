programa {
  funcao inicio()
  {
    // Variáveis para armazenar o nome e a idade
    cadeia nome
    inteiro idade

    // Solicitar o nome
    escreva("Digite seu nome: ")
    leia(nome)

    // Solicitar a idade
    escreva("Digite sua idade: ")
    leia(idade)

    // Exibir os dados informados
    escreva("Seu nome é: ", nome, "\n")
    escreva("Sua idade é: ", idade)
  }
}
